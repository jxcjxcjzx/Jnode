
 // 语法检查
 gulp.task('jshint',function(){
	return gulp.src('app/js/*.js')
			   .pipe(jshint())
			   .pipe(jshint.reporter('default'));
 });
 
 // 复制文件
 gulp.task('copy',function(){
	gulp.src('app/fonts/*')
		// 目标地址
		.pipe(gulp.dest('www/fonts/*'))
	gulp.src('app/templates/**')
		// 目标地址
		.pipe(gulp.dest('www/templates/'))
 })